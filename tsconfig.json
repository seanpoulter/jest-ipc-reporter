{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",

    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "types": [
      "node",
      "jest"
    ]
  }
}
